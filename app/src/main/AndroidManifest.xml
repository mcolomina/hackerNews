<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcolomina.hackernews">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.mcolomina.hackernews.app.HackerNewsApp"
        android:allowBackup="true"
        android:icon="@mipmap/hackernews_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/HackerNewsTheme">

        <activity
            android:name="com.mcolomina.hackernews.splash.SplashActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/HackerNews.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.mcolomina.hackernews.main.MainActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>